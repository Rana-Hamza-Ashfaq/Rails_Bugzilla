
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User type</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.user_ids.each do |id| %>
      <% @user = User.find_by(id: id)%>
      <% if @user.user_type == @user_type%>
        <tr>
          <td><%= @user.firstname %></td>
          <td><%= @user.email %></td>
          <td><%= @user.user_type %></td>
          <td><%= link_to 'Remove', home_remove_project_user_path(id: @project_id,user_id: @user.id) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', project_url(@project_id), class: "btn btn-secondary" %>

